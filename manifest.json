{
    "manifest_version": 3,
    "name": "YouTube Auto-Pause",
    "version": "1.0",
    "description": "Automatically pauses YouTube videos when you switch tabs or windows.",
    "action": {
        "default_popup": "popup.html"
    },
    "permissions": [
        "storage"
    ],
    "content_scripts": [
        {
            "matches": [
                "*://*.youtube.com/*"
            ],
            "js": [
                "content.js"
            ]
        }
    ]
}